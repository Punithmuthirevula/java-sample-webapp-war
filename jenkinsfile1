pipeline {
    agent any
      stages {
        stage ("Build"){
            when {
                branch "develop"
                }
            steps {
                echo "Build happens here sample code"
            }

        }
        stage ("Diploy-Dev"){
                when {
                                branch "develop"
                                }
                    steps {
                        echo "Deploy Dev happens here"
                    }
        
                }
        stage ("Diploy-Prod"){
                when {
                                branch "main"
                                }
                            steps {
                                echo "Deploy Prod happens here"
                            }
                
                }
      }
}
